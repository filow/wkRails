<%= link_to '返回列表', manage_users_path, class: 'btn btn-default' %>
<%= link_to '修改', edit_manage_user_path(@manage_user), class: 'btn btn-success' %>

<h3>
  <% if !@manage_user.is_forbidden && @manage_user.is_email_verified %>
    <%= bs_label_tag "正常", "success" %>
  <% elsif @manage_user.is_forbidden && !@manage_user.is_email_verified %>
    <%= bs_label_tag "禁用", "warning" %>
    <%= bs_label_tag "未验证", "warning" %>
  <% elsif !@manage_user.is_forbidden && !@manage_user.is_email_verified %>
    <%= bs_label_tag "未验证", "warning" %>
  <% else %>
    <%= bs_label_tag "禁用", "warning" %>
  <% end %>
  <%= @manage_user.realname %>
</h3>

<table class="table col-sm-6">
  <tr>
    <td class="col-sm-2">用户名</td>
    <td><%= @manage_user.name %></td>
  </tr>
  <tr>
    <td>真实姓名</td>
    <td><%= @manage_user.realname %></td>
  </tr>
  <tr>
    <td>性别</td>
    <td>
      <% if @manage_user.sex==0 %>
        <%= "男" %>
      <% else %>
        <%= "女" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>证件号</td>
    <td><%= @manage_user.idcard %></td>
  </tr>
  <tr>
    <td>组别</td>
    <td><%= @manage_user.department %></td>
  </tr>
  <tr>
    <td>组号</td>
    <td><%= @manage_user.group %></td>
  </tr>
  <tr>
    <td>手机号</td>
    <td><%= @manage_user.phone %></td>
  </tr>
  <tr>
    <td>邮箱</td>
    <td><%= @manage_user.email %></td>
  </tr>
  <tr>
    <td>作品数</td>
    <td><%= @manage_user.opus_count %></td>
  </tr>
  <tr>
    <td>作品热度</td>
    <td><%= @manage_user.popularity %></td>
  </tr>
</table>
