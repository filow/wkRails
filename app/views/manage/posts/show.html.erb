<% if !notice.blank? %>
    <div id="error_explanation" class="alert alert-success" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<dl class="dl-horizontal">
  <dt>标题:</dt>
  <dd>
    <%= @manage_post.title %>
    <% if @manage_post.is_top %>
        <span class="label label-info">置顶</span>
    <% end %>
  </dd>

  <dt>内容:</dt>
  <dd><%= @manage_post.content.html_safe %></dd>

  <dt>生效时间:</dt>
  <dd><%= @manage_post.valid_from.strftime('%F %R') %></dd>
</dl>

<%= link_to '修改', edit_manage_post_path(@manage_post) %> |
<%= link_to '后退', manage_posts_path %>
