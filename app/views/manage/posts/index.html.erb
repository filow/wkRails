<% if !notice.blank? %>
    <div id="error_explanation" class="alert alert-warning" role="alert">
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="page-header">
  <h1>通知公告</h1>
</div>

<div class="backlog clearfix">
  <table class="table table-hover">
    <thead>
    <tr>
      <th>删除</th>
      <th>标题</th>
      <th>是否置顶</th>
      <th>是否隐藏</th>
      <th>生效时间</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @manage_posts.each do |manage_post| %>
        <tr class="un">
          <td>
            <%= link_to manage_post, method: :delete, data: { confirm: '确定要删除该公告吗?' } do%>
                <span class="glyphicon glyphicon-remove-circle"></span>
            <% end %>
          </td>
          <td>
            <%= link_to manage_post.title, manage_post %>
          </td>
          <td>
            <% if manage_post.is_top %>
                <span class="glyphicon glyphicon-ok"></span>
            <% else %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
          <td>
            <% if manage_post.is_hide %>
                <span class="glyphicon glyphicon-ok"></span>
            <% else %>
                <span class="glyphicon glyphicon-remove"></span>
            <% end %>
          </td>
          <td>
            <time datetime="">
              <%= manage_post.valid_from.strftime('%F %R') %>
            </time>
          </td>
          <td>
            <%= link_to '修改', edit_manage_post_path(manage_post), class: "btn btn-warning" %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <%= link_to '新建通知公告', new_manage_post_path ,class: "btn btn-success"%>
</div>