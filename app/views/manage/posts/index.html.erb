<p id="notice"><%= notice %></p>

<h1>Listing Manage Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Content notag</th>
      <th>Valid from</th>
      <th>Is top</th>
      <th>Is hide</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manage_posts.each do |manage_post| %>
      <tr>
        <td><%= manage_post.title %></td>
        <td><%= manage_post.content %></td>
        <td><%= manage_post.content_notag %></td>
        <td><%= manage_post.valid_from %></td>
        <td><%= manage_post.is_top %></td>
        <td><%= manage_post.is_hide %></td>
        <td><%= link_to 'Show', manage_post %></td>
        <td><%= link_to 'Edit', edit_manage_post_path(manage_post) %></td>
        <td><%= link_to 'Destroy', manage_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

