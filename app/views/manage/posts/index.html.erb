<div class="page-header">
  <h2>通知公告</h2>
</div>

<table class="table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>ID</th>
    <th width="180px">标题</th>
    <th>内容概要</th>
    <th width="100px">创建日期</th>
    <th width="100px">发布日期</th>
    <th>状态</th>
  </tr>
  </thead>

  <tbody>
  <% @manage_posts.each do |p| %>
      <tr>
        <td>
          <input type="radio" name="p_radio" class="p_radio" value="<%= p.id %>">
        </td>
        <td><%= p.id %></td>
        <td><%= p.title %></td>
        <td><%= truncate p.content_notag, length:100 %></td>
        <td>
          <span class="time-column" title="<%= p.created_at.strftime("%F %R") %>">
            <%= p.created_at.strftime("%F") %>
          </span>
        </td>
        <td>
          <span class="time-column" title="<%= p.created_at.strftime("%F %R") %>">
            <%= p.created_at.strftime("%F") %>
          </span>
        </td>
        <td>
          <% if p.is_hide? %>
            <%= bs_label_tag "隐藏", "warning" %>
          <% end %>
          <% if p.is_top? %>
            <%= bs_label_tag "置顶", "primary" %>
          <% end %>
          <% if p.published? %>
            <%= bs_label_tag "已发布", "success" %>
          <% else %>
            <%= bs_label_tag "未发布", "default" %>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to '新建通知公告', new_manage_post_path ,class: "btn btn-success" %>
