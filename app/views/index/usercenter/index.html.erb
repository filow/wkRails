<div class="usercenter">
	<div class="row-fluid">
    <%= render 'sidebar' %>
		<div class="main span9">
			<div class="user_info box">
				<div class="box-header"><a href="#" class="pull-right">编辑资料</a>个人资料</div>
				<div class="box-body">
					<table class="user_info_table table">
						<tr>
							<td>用户名：</td>
							<td><%= @user.name %></td>
							<td>姓名：</td>
							<td><%= @user.realname %></td>
						</tr>
						<tr>
							<td>性别：</td>
							<td><%= @user.sex_cn %></td>
						</tr>
						<tr>
							<td>类型：</td>
							<td><%= @user.group_cn %></td>
							<td>所属单位：</td>
							<td><%= @user.department %></td>
						</tr>
						<tr>
							<td>电话号码：</td><td><%= @user.phone %></td>
							<td>电子邮箱：</td><td><%= @user.email %></td>
						</tr>
                      <tr>
                        <td>身份证号</td>
                        <td><%= @user.idcard %></td>
                      </tr>
					</table>
				</div>
			</div>
			<div class="user_work box">
				<div class="box-header">作品管理</div>
				<div class="box-body">
					<div class="tabbable">
					<div class="user_work_nav">
						<ul>
							<li class="active"><a href="#tab1" data-toggle="tab">本届作品</a></li>
							<li><a href="#tab2" data-toggle="tab">往届作品</a></li>
						</ul>
				    </div>
					<div class="tab-content">
					    <div class="tab-pane active work_list" id="tab1">
					      <ul>
                            <% @current_creations.each do |c| %>
                                <li>
                                  <div class="work_thumb">
                                    <a href="<%= creation_path(c) %>" class="thumbnail">
                                      <%= image_tag c.thumb.thumb, alt: c.name %>
                                    </a>
                                  </div>
                                  <div class="user_work_info">
                                    <div class="user_work_name"><%= c.name %></div>
                                    <div class="user_work_vote"><span><%= c.vote_count %></span>当前票数：</div>
                                    <div class="user_work_uploadtime"><span><%= c.created_at.strftime("%F %R") %></span>上传时间:</div>
                                  </div>
                                </li>
                            <% end %>
					      </ul>
					      <div class="clear"></div>
					    </div>
					    <div class="tab-pane work_list" id="tab2">
							<ul>
                              <% @original_creations.each do |c| %>
                                  <li>
                                    <div class="work_thumb">
                                      <a href="<%= creation_path(c) %>" class="thumbnail">
                                        <%= image_tag c.thumb.thumb, alt: c.name %>
                                      </a>
                                    </div>
                                    <div class="user_work_info">
                                      <div class="user_work_name"><%= c.name %></div>
                                      <div class="user_work_author">作者:<span><%= c.authors_str %></span></div>
                                      <div class="user_work_vote">当前票数：<span><%= c.vote_count %></span></div>
                                      <div class="user_work_uploadtime">投票时间:<span>########</span></div>
                                    </div>
                                  </li>
                              <% end %>
					    	</ul>
					    	<div class="clear"></div>
						</div>
					</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
