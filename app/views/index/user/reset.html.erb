<div class="ibox col-md-6 col-md-offset-3">
  <div class="ibox-title">
    <h3>重置密码</h3>
  </div>
  <div class="ibox-content">
    <%= form_errors @user unless @user.nil? %>
    <%= form_tag user_reset_path, class:'form-horizontal', id:'reg_form' do %>

      <div class="form-group">
        <label for="tel_num" class="col-md-3 control-label">手机号码</label>
        <div class="col-md-7">
          <%= text_field_tag :tel_num, params[:tel_num], autofocus: true, placeholder:"请输入手机号",class: 'form-control',id: 'tel_num' %>
        </div>
      </div>
      <div class="form-group">
        <label for="password" class="col-md-3 control-label">新密码</label>
        <div class="col-md-7">
          <%= password_field_tag :password, params[:password], placeholder:"请输入密码", class: 'form-control', id: 'password' %>
        </div>
      </div>
      <div class="hr-line-dashed"></div>

      <div class="form-group">
        <label for="valicode" class="col-md-3 control-label">验证码</label>
        <div class="col-md-5">
          <%= text_field_tag :valicode, params[:valicode], placeholder:"手机验证码", class: 'form-control', id: 'valicode' %>
        </div>
        <div class="col-md-4">
          <button id="validate" class="btn btn-warning" data-url="<%= user_reg_validate_path %>" data-mode="reset">获取手机验证码</button>
        </div>


      </div>
      <div class="row">
        <div class="col-md-6">
          <%= submit_tag '重设密码',class: 'btn btn-block btn-primary' %>
        </div>
        <div class="col-md-6">
          <a href="<%= usercenter_url %>" class="btn btn-block btn-default">返回登录页面</a>
        </div>
      </div>
      <div class="clear"></div>
    <% end %>

  </div>
</div>
