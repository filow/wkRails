<extend name="Common:base" />
<block name="title">作品展示</block>
<block name="content">
<div class="exhibition_wrapper">
	<div class="works_nav">
		<ul>
			<li class="group"><a href="{:U('gallery',array('order'=>I('order')))}" <?php if(I('group')=="") echo "class=\"active\""; ?>>所有组别</a></li>
			<li class="group"><a href="{:U('gallery',array('group'=>'teacher','order'=>I('order')))}" <?php if(I('group')=="teacher") echo "class=\"active\""; ?>>教师组</a></li>
			<li class="group"><a href="{:U('gallery',array('group'=>'student','order'=>I('order')))}" <?php if(I('group')=="student") echo "class=\"active\""; ?>>学生组</a></li>

			<li><a href="{:U('gallery',array('group'=>I('group')))}" <?php if(I('order')=="") echo "class=\"active\""; ?>>最新提交</a></li>
			<li><a href="{:U('gallery',array('group'=>I('group'),'order'=>'all'))}" <?php if(I('order')=="all") echo "class=\"active\""; ?>>综合排序</a></li>
			<li><a href="{:U('gallery',array('group'=>I('group'),'order'=>'vote'))}" <?php if(I('order')=="vote") echo "class=\"active\""; ?>>最多票数</a></li>
			<li><a href="{:U('gallery',array('group'=>I('group'),'order'=>'view'))}" <?php if(I('order')=="view") echo "class=\"active\""; ?>>最多播放</a></li>
			<li><a href="{:U('gallery',array('group'=>I('group'),'order'=>'comment'))}" <?php if(I('order')=="comment") echo "class=\"active\""; ?>>最多评论</a></li>
			<li><a class="disabled">共有{$count}个参赛作品</a></li>
			<div class="clear"></div>
		</ul>
		<div class="clear"></div>
		<hr>
	</div> <!-- 顶部内容 -->
	<div class="works_group">
		<ul>
			<volist name="opus" id="li">
			<li>
				<div class="works">
					<div class="works_name"><h5>{$li.opus_name|mb_substr=0,15,"utf-8"}</h5></div>
					<div class="works_shot">
						<div class="works_thumb">
							<a href="{:U('Opus/view',array('id'=>$li['id']))}" target="_blank">
								<div class="works_pic">
									<img src="{:getThumbMini($li['id'])}" alt="">
								</div>
							</a>
							<a href="{:U('Opus/view',array('id'=>$li['id']))}" target="_blank" class="works_over" style="opacity:0;">
									<p>{$li.overview|default="该作品没有介绍"}</p>
									<strong>{$li.add_time|date="m月d日",###}</strong>
							</a>
						</div>
						<ul class="works_info">
							<li class="views"><a title="浏览数"><i class="icon-eye"></i>{$li.view_count}</a></li>
							<li class="comments"><a title="评论数"><i class="icon-comment"></i>{$li.comment_count}</a></li>
							<li class="votes"><a title="投票数"><i class="icon-heart"></i>{$li.vote_count}</a></li>
							<div class="clear"></div>
						</ul>
						<div class="clear"></div>
					</div>
				</div>
				<div class="works_author">
					<a href="{:U('User/userinfo',array('uid'=>$li['userinfo']['uid']))}"><img src="{:getAvatar($li['userinfo']['avatar'])}" alt="作者" width="22"><span class="works_author_name">{$li.userinfo.nickname}</span><span class="works_author_department">{$li.department|mb_substr=0,27}</span></a>
				</div>
			</li>
			</volist>
		</ul>
	</div><!--  works_group end -->
	<div class="clear"></div>
	<div class="pagination pagination-centered">
	  <ul>
      <!-- 这里是分页 -->
	    {$show}
	  </ul>
	</div>
</div> <!-- exhibition_wrapper end -->
</block>
<block name="extra_js">
<script>
$(document).ready(function(){
	$("#close_icon").click(function(){
		$('.works_banner').fadeOut();
	});
	$(".works_over").hover(function(){
		$(this).animate({ opacity: 1 }, 400);
	},function(){
			$(this).animate({ opacity: 0 }, 400);
		}
	);
});
</script>
</block>
