<extend name="Common:base" />
<block name="title">“<%= @kw %>”的搜索结果</block>
<block name="extra_css">
	<link rel="stylesheet" href="__PUBLIC__/index/css/search.css">
</block>
<block name="content">
  <div class="search_wrapper">
    <div class="search_title">
      <h4>与"<span><%= @kw %></span>"相关的内容：</h4>
    </div>
    <div class="well">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#creation" data-toggle="tab">用户作品(<%= @count[:creations] %>)</a></li>
        <li class="disabled"><a href="#user" data-toggle="tab">参赛选手(<%= @count[:users] %>)</a></li>
        <li class="disabled"><a href="#post" data-toggle="tab">通知公告(<%= @count[:posts] %>)</a></li>
      </ul>
      <div class="tab-content">
      <div class="tab-pane active" id="user">
        <% if @count[:post] == 0  %>
            <p>没有符合筛选条件的用户</p>
        <% end %>
        <div class="search_users">
          <!-- 顶部内容 -->
          <div class="users_list">
            <ul>
              <% @result[:users].each do |u| %>
                  <li>
                    <div class="users">
                      <div class="users_hp">
                        <%= link_to root_path do %>
                            <img src="<%= u.avatar %>" alt="头像" class="img-thumbnail">
                        <% end %>
                      </div>
                      <div class="users_info">
                        <div class="users_name">
                          <%= link_to u.realname.html_safe, root_path %>
                        </div>
                        <div>
                          <% if u.sex == Manage::User.sexes[:male] %>
                              <span class="users_sex users_sex_male"></span>
                          <% else %>
                              <span class="users_sex users_sex_female"></span>
                          <% end %>
                          <span><%= u.department %></span>
                        </div>
                        <div>
                          作品数:<span class="users_work_amount"><%= u.opus_count %></span>
                          热度：<span class="users_work_views"><%= u.popularity %></span>
                        </div>
                        <div class="users_intro">
                          个人简介:<span>......</span>
                        </div>
                        <div class="users_work">
                          <a href="{:U('Opus/view',array('id'=>$ops['id']))}"><i class="icon-video-camera"></i>{$ops.opus_name}</a>
                        </div>
                      </div>
                    </div>
                  </li>
              <% end %>
            </ul>
          </div> <!-- user_list end -->
        </div><!--  search_user end -->
        <div class="clear"></div>
      </div> <!-- tab-pane#id end -->
      <div class="tab-pane active" id="post">
        <% if @count[:post] == 0  %>
            <p>没有符合筛选条件的通知公告</p>
        <% end %>
        <div class="search_news">
          <!-- 顶部内容 -->
          <div class="news_list">
            <ul>
              <li>
                <div class="news">
                  <div class="news_title"><a href="{:U('passage/'.$li['id'])}">{$li.title}</a></div>
                  <div class="news_summary">{$li.content_notag}</div>
                  <div class="news_info">
                    <span class="news_time">发布时间：{$li.date|date="Y-m-d",###}</span>
                  </div>
                </div>
              </li>
            </ul>
          </div><!-- posts_list end -->
        </div> <!-- search_posts end -->
      </div><!-- tab-pane#post end -->
      <div class="tab-pane active" id="creation">
        <% if @count[:creation] == 0  %>
            <p>没有符合筛选条件的作品</p>
        <% end %>
        <div class="search_works">
          <!-- 顶部内容 -->
            <div class="works_group">
              <ul>
                <% @result[:creations].each do |c| %>
                <li>
                  <div class="works">
                    <div class="works_shot">
                      <%= link_to creation_path(c) do %>
                          <img src="<%= c.thumb.thumb %>" alt="缩略图" class="img-thumbnail">
                      <% end %>
                      <a href="{:U('Opus/view',array('id'=>$li['id']))}" target="_blank" class="works_name">
                        <h5>[第<%= c.version %>届] <%= c.name.html_safe %></h5>
                      </a>
                      <div class="works_thumb">
                        <a href="{:U('Opus/view',array('id'=>$li['id']))}" target="_blank">
                          <div class="works_pic">
                            <img src="{:getThumb($li['id'])}">
                          </div>
                        </a>
                      </div>

                      <ul class="works_info">
                        <li class="views"><a title="浏览数"><i class="icon-eye"></i>{$li.view_count}</a></li>
                        <li class="comments"><a title="评论数"><i class="icon-comment"></i>{$li.comment_count}</a></li>
                        <li class="votes"><a title="投票数"><i class="icon-heart"></i>{$li.vote_count}</a></li>
                        <div class="clear"></div>
                      </ul>
                    </div>
                  </div>
                  <div class="works_author">
                    <a href="{:U('User/userinfo',array('uid'=>$li['userinfo']['uid']))}"><img src="{:getAvatar($li['userinfo']['avatar'])}" alt="作者" width="22"><span class="works_author_name">{$li.userinfo.nickname}</span></a>
                    <span class="department">{$li.userinfo.department}</span>
                  </div>
                </li>
                <% end %>
              </ul>
            </div><!--  works_group end -->
        </div><!-- search_work end -->
      </div><!-- tab-pane#creation end -->
      </div><!-- tab-content end -->
    </div> <!-- well -->
  </div><!--  search_wrapper -->
</block>
