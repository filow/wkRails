<div class="slidebox">
  <div id="poster_slide" class="carousel slide poster_slide">
    <div class="carousel-inner" role="listbox">
      <% @posters.each_with_index do |x, index| %>
          <% if index == 0 %>
              <div class="active item"><%= image_tag x %></div>
          <% else %>
              <div class="item"><%= image_tag x %></div>
          <% end %>
      <% end %>

    </div>

    <a class="carousel-control left" href="#poster_slide" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </a>
    <a class="carousel-control right" href="#poster_slide" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    </a>
  </div>
</div>
<div class="content">
  <div class="row">
    <div class="announcement col-md-4">
      <div class="icon">
        <%= image_tag 'index/icon_ann.png' %>
        <%= image_tag 'index/title_ann.png', class:'icon_img', alt: '通知公告' %>
      </div>
      <div class="main_content">

        <div class="well list_box">
          <table class="table table-condensed table-hover">
            <% @posts.each_with_index do |p, i| %>
            <tr>
              <td>
                <%= link_to p.title, passage_path(p) %>
              </td>
              <td width="50px"><%= p.publish_at.strftime("%m-%d") %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
    <!-- 大赛介绍 -->
    <div class="introduce col-md-4">
      <div class="icon">
        <%= image_tag 'index/icon_intro.png' %>
        <%= image_tag 'index/title_intro.png', class:'icindex/user#login icon_img', alt: '大赛介绍' %>
      </div>
      <div class="main_content">
        <div class="well list_box">
          <table class="table table-condensed table-hover">
            <tr>
              <td>
                <a href="{$ito.url}">{$k}. {$ito.title}</a>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
    <!-- //大赛介绍 -->
    <!-- 选手登录 -->
    <div class="login col-md-4">
      <div class="icon">
        <%= image_tag 'index/icon_login.png' %>
        <%= image_tag 'index/title_login.png', class:'icon_img', alt: '选手登录' %>
      </div>
      <div class="main_content">
        <div class="list_box well login_box">
        <% unless session[:user_id].blank? %>
          <div class="user_after">
            <div class="user_info">
              <table class="table">
                <tr>
                  <td width="70px">
                    <% unless @user.avatar.thumb.url.nil? %>
                      <img src="<%= @user.avatar.thumb %>" class="user_header" width="70">
                    <% else %>
                      <%= image_tag 'index/user.jpg' %>
                    <% end %>
                  </td>

                  <td class="user_info_detail">
                    <div class="user_name">
                      <%= link_to @user.realname, usercenter_path %>
                    </div>
                    <div>未读消息数:<span><%= @user.msg_unread %></span></div>
                    <div>人气：<span><%= @user.popularity %></span></div>
                    <div>单位:<span><%= @user.department.blank? ? '未填写': @user.department %></span></div>

                  </td>
                </tr>
              </table>
            </div>
            <div class="user_nav">
              <ul class="nav nav-list">
                <li><%= link_to '用户中心', usercenter_url %></li>
                <li><%= link_to '退出登陆', user_logout_path, method: :delete %></li>
              </ul>
            </div>
          </div>

        <% else %>
          <%= form_tag(user_login_path, method: :post) do %>
              <input type="text" name="username" placeholder="用户名" class="login_input form-control">
              <input type="password" name="password" placeholder="密码" class="login_input form-control">
              <input type="submit" class="login_submit btn btn-warning btn-block" value="登陆">
              <a href="<%= user_reg_path %>" class="btn btn-success btn-block">立即注册</a>
          <% end %>
        <% end %>
        </div> <!-- login-box end -->
      </div>
    </div>
  </div>
</div>


<div class="content_video">
  <div class="row-fluid">
    <div class="main-content col-md-8">
      <!-- 示例视频 -->
      <div class="video_example well">
        <h4>示例视频</h4>
        <div class="videobox">
          <div id="video_exp_carousel" class="carousel slide">
            <div class="carousel-inner">
              <% @exp_video.each_with_index do |v,i| %>
                <% if i == 0 %>
                <div class="item active">
                <% else %>
                <div class="item">
                <% end %>
                  <a href="#video_exp_modal" data-toggle="modal" data-title="<%= v.name %>" data-location="<%= v.video.url %>" class="video_exp_btn">
                    <img src="<%= v.thumb_url %>" alt="<%= v.name %>">
                  </a>
                  <div class="caption" style="bottom:0">
                    <p><%= v.name %> <small>作者：<%= v.author %></small></p>
                  </div>
                </div>
              <% end %>
            </div>
            <a class="left carousel-control" href="#video_exp_carousel" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#video_exp_carousel" data-slide="next">›</a>
          </div>
          <div class="clear"></div>
        </div>
      </div>

      <!-- Video_Example Modal -->
      <div id="video_exp_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:680px;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h3 class="video_exp_title"></h3>
        </div>
        <div class="modal-body" style="max-height:500px;">
          <div id="player"></div>
        </div>
      </div>


      <div class="works_show"><%= image_tag 'index/works_show.png', alt: '作品展示' %></div>
      <div class="slogan"></div>
      <!-- 作品 -->
      <volist name="random_video" id="li">
        <div class="work well">
          <div class="row-fluid">
            <div class="video">
              <a href="{:U('Opus/view',array('id'=>$li['id']))}">
                <img src="{:getThumb($li['id'])}" alt="{$li.opus_name}" class="video_pic">
              </a>
            </div>
            <div class="video_info">
              <h3>{$li.opus_name}</h3>
              <p>{$li.overview}</p>
              <div style="float:right;">
                <a class="btn btn-primary" href="{:U('Opus/view',array('id'=>$li['id']))}">查看详情</a>
              </div>
            </div>
          </div>
          <div class="info">
            <volist name="li['authors']" id="author">
              <div class="author" title="{$author.author} {$author.sex} {$author.belong}">
                <i class="icon-user"></i>
                <a>{$author.author}</a>
              </div>
            </volist>
            <div class="vote">
              当前票数:<span style="margin: 0 5px;"><i class="icon-heart"></i><a class="poll vote_count">{$li['vote_count']}</a></span>
              <if condition="getVoteStatus($li['id'])">
                <a class="btn btn-primary" disabled>已投票</a>
                <else />
                <if condition="can_vote()">
                  <a class="btn btn-primary vote_btn" href="{:U('opus/vote',array('opus_id'=>$li['id']))}" onclick="return ajaxvote()">投他一票</a>
                  <else />
                  <a class="btn btn-primary" disabled>投票已截止</a>
                </if>
              </if>

            </div>
            <div class="clear"></div>
          </div>
        </div>
      </volist>
    </div>
    <div class="sidebar col-md-4">


      <div class="hot_author_box ranklist">
        <%= image_tag 'index/top_author.png', alt:'人气选手', class:'hot_box_title', width: 96, height: 23 %>
        <hr>
        <% if @user_rank.length > 0 %>
            <div class="top_author">
              <a href="<%= user_detail_path @user_rank[0].name %>">
                <%= image_tag @user_rank[0].avatar.url(:thumb), alt: @user_rank[0].realname, class:'top_author_headphoto' %>
              </a>
              <div class="author_info">
                <a href="<%= user_detail_path @user_rank[0].realname %>" class="author_name"><%= @user_rank[0].realname %></a>
                <a><span><%= @user_rank[0].department %></span>单位:</a>
                <a><span><strong><%= @user_rank[0].popularity %></strong></span>热度:</a>
              </div>
            </div>
        <% else %>
            目前还没有上传作品的用户！
        <% end %>
        <table class="hot_author table">
          <% @user_rank.each_with_index do |item, i| %>
              <% unless i == 0 %>
                  <tr>
                    <td class="thumb"><%= image_tag item.avatar.url(:thumb_mini), alt: item.realname, class:'avatar' %></td>
                    <td class="username"><%= link_to item.realname, user_detail_path(item.realname) %></td>
                    <td class="department"><%= item.department %></td>
                  </tr>
              <% end %>
          <% end %>
        </table>
      </div>


      <div class="hot_work_box ranklist">
        <%= image_tag 'index/top_work.png', alt:'人气作品', class:'hot_box_title',width: 95, height: 23 %>
        <hr>
        <% if @opus_rank.length > 0 %>
            <div class="top">
              <%= image_tag @opus_rank[0].thumb.url(:thumb),alt: @opus_rank[0].name,class:'video_thumb' %>
              <div class="details">
                <%= link_to @opus_rank[0].name, creation_url(@opus_rank[0].name),class:'work_name',title:@opus_rank[0].name %>
                作者：<%= link_to @opus_rank[0].user.realname, user_detail_path(@opus_rank[0].user.realname) %>
              </div>
            </div>
        <% else %>
            目前还没有已发布的作品！
        <% end %>
        <table class="hot_work table">
          <% @opus_rank.each_with_index do |item,i|%>
              <% unless i == 0 %>
                  <tr>
                    <td class="workname">
                      <%= link_to item.name, creation_path(item.name), title: item.name %>
                    </td>
                    <td class="workauthor">
                      <%= link_to item.user.realname, user_detail_path(item.user.realname) %>
                    </td>
                  </tr>
              <% end %>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

